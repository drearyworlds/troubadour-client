{
  "name": "troubadour-client",
  "description": "Troubadour Song List Client Application",
  "version": "0.2.0",
  "author": "drearyworlds",
  "main": "electron/dist/main.js",
  "scripts": {
    "ng": "ng",
    "clean": "rd /s /q .\\dist && rd /s /q .\\bin",
    "build": "yarn install && ng build --base-href ./ && tsc --p electron",
    "build-cli": "yarn install && ng build",
    "rebuild": "yarn run clean && yarn run build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start": "yarn run build && electron .",
    "start-cli": "yarn run build && ng serve",
    "pack": "electron-builder --dir",
    "dist": "yarn run build && electron-builder",
    "publish": "yarn run build && electron-builder --win --x64 --publish always"
  },
  "build": {
    "appId": "com.electron.troubadour-client",
    "productName": "Troubadour Client",
    "files": [
      "!bin",
      "!node_modules",
      "!e2e",
      "!src",
      "!browserslistrc",
      "!angular.json",
      "!azure-pipelines.yml",
      "!karma.conf.js",
      "!README.md",
      "!tsconfig.app.json",
      "!tsconfig.json",
      "!tsconfig.spec.json",
      "!tslint.json"
    ],
    "directories": {
      "buildResources": "res",
      "output": "bin"
    },
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "drearyworlds",
        "repo": "troubadour-client"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^11.2.10",
    "@angular/cli": "^11.2.9",
    "@angular/common": "^11.2.10",
    "@angular/compiler": "^11.2.10",
    "@angular/core": "^11.2.10",
    "@angular/forms": "^11.2.10",
    "@angular/platform-browser": "^11.2.10",
    "@angular/platform-browser-dynamic": "^11.2.10",
    "@angular/router": "^11.2.10",
    "bootstrap": "^4.6.0",
    "component": "^1.1.0",
    "ng": "^0.0.0",
    "ngx-toastr": "^13.2.0",
    "tslib": "^2.1.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.1102.9",
    "@angular/compiler-cli": "^11.2.10",
    "@ng-bootstrap/ng-bootstrap": "^9.1.0",
    "@types/jasmine": "~3.6.3",
    "codelyzer": "^6.0.1",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~6.0.0",
    "karma": "~5.2.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.1",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~9.1.1",
    "tslint": "~6.1.3",
    "typescript": "^4.1.5"
  }
}
