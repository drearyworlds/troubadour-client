{
  "name": "troubadour-client",
  "description": "Troubadour Song List Client Application",
  "version": "0.2.7",
  "author": "drearyworlds",
  "main": "electron/dist/main.js",
  "scripts": {
    "ng": "ng",
    "clean": "rd /s /q .\\dist && rd /s /q .\\bin",
    "build": "yarn install && ng build --base-href ./ && tsc --p electron",
    "build-cli": "yarn install && ng build",
    "rebuild": "yarn run clean && yarn run build",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start": "yarn run build && electron .",
    "start-cli": "yarn run build && ng serve",
    "pack": "electron-builder --dir",
    "dist": "yarn run build && electron-builder",
    "publish": "yarn run build && electron-builder --win --x64 --publish always"
  },
  "build": {
    "appId": "com.electron.troubadour-client",
    "productName": "Troubadour Client",
    "files": [
      "!bin",
      "!node_modules",
      "!e2e",
      "!src",
      "!browserslistrc",
      "!angular.json",
      "!azure-pipelines.yml",
      "!karma.conf.js",
      "!README.md",
      "!tsconfig.app.json",
      "!tsconfig.json",
      "!tsconfig.spec.json",
      "!tslint.json"
    ],
    "directories": {
      "buildResources": "res",
      "output": "bin"
    },
    "asar": true,
    "publish": [
      {
        "provider": "github",
        "owner": "drearyworlds",
        "repo": "troubadour-client"
      }
    ],
    "win": {
      "publish": [
        "github"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/cli": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/router": "^14.0.0",
    "bootstrap": "^5.1.3",
    "component": "^1.1.0",
    "ng": "^0.0.0",
    "ngx-toastr": "^14.3.0",
    "tslib": "^2.4.0",
    "zone.js": "~0.11.5"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.0",
    "@angular/compiler-cli": "^14.0.0",
    "@ng-bootstrap/ng-bootstrap": "^12.1.2",
    "@types/jasmine": "~4.0.3",
    "codelyzer": "^6.0.2",
    "electron": "^19.0.3",
    "electron-builder": "^23.0.3",
    "jasmine-core": "~4.1.1",
    "jasmine-spec-reporter": "~7.0.0",
    "karma": "~6.3.20",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.1",
    "karma-jasmine-html-reporter": "^2.0.0",
    "protractor": "~7.0.0",
    "ts-node": "~10.8.1",
    "tslint": "~6.1.3",
    "typescript": "^4.7.3"
  }
}
